            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <animations>
        <animation id="test">
            <keyframe instant="5">
                <translate x="0" y="0" z="5"/>
                <rotate angle_x="90" angle_y="0" angle_z="0"/>
                <scale x="2" y="1" z="1"/>
            </keyframe>
            <keyframe instant="10">
