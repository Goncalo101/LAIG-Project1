            <transformation>
                <translate x="0" y="0" z="1" />
                <scale x="2" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTextureTrunk"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component> -->
    </components>  
</lxs>