            <children>
                <componentref id="cannon_circle"/>
                <componentref id="cannon_wheel_quarter1" />
                <componentref id="cannon_wheel_quarter2" />
                <componentref id="cannon_wheel_quarter3" />
                <componentref id="cannon_wheel_quarter4" />
