            </materials>
            <texture id="window_tex" length_s="1" length_t="2"/>
            <children>
                <primitiveref id="window"/>
            </children>
        </component>

        <component id="watchtower">
            <transformation>
                <translate x="-3.5" y="7" z="1"/>
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="2"/>
            <children>
                <primitiveref id="watchtower_floor"/>
