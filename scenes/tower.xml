            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="watchtower_limit_inner"/>
                <primitiveref id="watchtower_limit_inner_corner"/>
                <componentref id="watchtower_inner2"/>
