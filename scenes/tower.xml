<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="wood" file="scenes/images/table.jpg" />
        <texture id="rusted_copper" file="scenes/images/copper.jpg" />
        <texture id="stone_walls" file="scenes/images/stone_walls.jpg" />
        <texture id="demoTexture" file="scenes/images/vidral.jpg"/>
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.6" g="0.6" b="0.6" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="support_beam">
            <cylinder base="0.1" top="0.1" height="1.0" slices="10" stacks="10" />
        </primitive>
        <primitive id="gun">
            <cylinder base="0.3" top="0.3" height="2.0" slices="10" stacks="10" />
        </primitive>
        <primitive id="gun_support">
            <cylinder base="0.3" top="0.3" height="2.0" slices="4" stacks="10" />
        </primitive>
        <primitive id="wheel_torus_large">
            <torus inner="0.1" outer="1.0" slices="10" loops="25" />
        </primitive>
        <primitive id="cannon_back">
            <sphere radius="0.3" slices="10" stacks="10" />
        </primitive>
        <primitive id="wall">
            <rectangle x1="0" y1="0" x2="5" y2="7" />
        </primitive>
        <!-- <primitive id="sphere">
            <sphere radius="1.0" slices="10" stacks="10" />
        </primitive>
        <primitive id="triangle">
            <triangle   x1="0"   y1="0" z1="0"
                        x2="3"   y2="0" z2="0"
                        x3="1.5" y3="0" z3="6" />
        </primitive> -->
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" length_s="1" length_t="2"/>
            <children>
                <componentref id="cannon"/>
                <componentref id="tower"/>
            </children>
        </component>

        <component id="tower">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="2"/>
            <children>
                <componentref id="walls"/>
                <!-- <componentref id="watchtower"/> -->
            </children>
        </component>

        <component id="walls">
            <transformation>
                <translate x="-2.5" y="0" z="0"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="stone_walls" length_s="1" length_t="2"/>
            <children>
                <primitiveref id="wall"/>
                <componentref id="wall1"/>
            </children>
        </component>

        <component id="wall1">
            <transformation>
                <rotate axis="y" angle="90"/>
                <translate x="0" y="0" z="5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="stone_walls" length_s="1" length_t="2"/>
            <children>
                <primitiveref id="wall"/>
                <componentref id="wall2"/>
            </children>
        </component>

        <component id="wall2">
            <transformation>
                <rotate axis="y" angle="90"/>
                <translate x="0" y="0" z="5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="stone_walls" length_s="1" length_t="2"/>
            <children>
                <primitiveref id="wall"/>
                <componentref id="wall3"/>
            </children>
        </component>

        <component id="wall3">
            <transformation>
                <rotate axis="y" angle="90"/>
                <translate x="0" y="0" z="5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="stone_walls" length_s="1" length_t="2"/>
            <children>
                <primitiveref id="wall"/>
            </children>
        </component>

        <component id="cannon">
            <transformation>
                <translate x="0" y="0" z="3" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="2"/>
            <children>
                <componentref id="cannon_wheel1"/>
                <componentref id="cannon_wheel2"/>
                <componentref id="cannon_gun"/>
                <componentref id="cannon_support"/>
                <componentref id="cannon_butt"/>
            </children>
        </component>

        <component id="cannon_butt">
            <transformation>
                <translate x="0" y="0.3" z="-0.3" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="rusted_copper" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="cannon_back" />
            </children>
        </component>

        <component id="cannon_support">
            <transformation>
                <rotate axis="y" angle="90"/>
                <rotate axis="z" angle="45" />
                <translate x="0" y="0" z="-1"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="wood" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="gun_support" />
            </children>
        </component>

        <component id="cannon_gun">
            <transformation>
                <translate x="0" y="0.3" z="-0.3" />
                <rotate axis="x" angle="-25" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="rusted_copper" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="gun"/>
            </children>
        </component>

        <component id="cannon_wheel1">
            <transformation>
                <translate x="1.0" y="0" z="0"/>
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="wood" length_s="1" length_t="1"/>
            <children>
                <componentref id="cannon_circle"/>
                <componentref id="cannon_wheel_quarter1" />
                <componentref id="cannon_wheel_quarter2" />
                <componentref id="cannon_wheel_quarter3" />
                <componentref id="cannon_wheel_quarter4" />
            </children>
        </component>

        <component id="cannon_wheel2">
            <transformation>
                <translate x="-1.0" y="0" z="0"/>
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="wood" length_s="1" length_t="1"/>
            <children>
                <componentref id="cannon_circle"/>
                <componentref id="cannon_wheel_quarter1" />
                <componentref id="cannon_wheel_quarter2" />
                <componentref id="cannon_wheel_quarter3" />
                <componentref id="cannon_wheel_quarter4" />
            </children>
        </component>

        <component id="cannon_circle">
            <transformation>
                <rotate axis="y" angle="90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="wheel_torus_large"/>
            </children>
        </component>

        <component id="cannon_wheel_quarter1">
            <transformation>
                <rotate axis="x" angle="0"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="support_beam"/>
                <componentref id="cannon_beam1"/>
            </children>
        </component>
        
        <component id="cannon_wheel_quarter2">
            <transformation>
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="support_beam"/>
                <componentref id="cannon_beam1"/>
            </children>
        </component>

        <component id="cannon_wheel_quarter3">
            <transformation>
                <rotate axis="x" angle="180"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="support_beam"/>
                <componentref id="cannon_beam1"/>
            </children>
        </component>

        <component id="cannon_wheel_quarter4">
            <transformation>
                <rotate axis="x" angle="270"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="support_beam"/>
                <componentref id="cannon_beam1"/>
            </children>
        </component>

        <component id="cannon_beam1">
            <transformation>
                <rotate axis="x" angle="22.5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="support_beam"/>
                <componentref id="cannon_beam2"/>
            </children>
        </component>

        <component id="cannon_beam2">
            <transformation>
                <rotate axis="x" angle="22.5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="support_beam"/>
                <componentref id="cannon_beam3"/>
            </children>
        </component>

        <component id="cannon_beam3">
            <transformation>
                <rotate axis="x" angle="22.5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="support_beam"/>
            </children>
        </component>
    </components>
</lxs>
