<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="tower_door" file="scenes/images/castle_door.jpg" />
        <texture id="window_tex" file="scenes/images/window.jpg" />
        <texture id="wood" file="scenes/images/table.jpg" />
        <texture id="rusted_copper" file="scenes/images/copper.jpg" />
        <texture id="stone_walls" file="scenes/images/stone_walls.jpg" />
        <texture id="demoTexture" file="scenes/images/vidral.jpg"/>
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.6" g="0.6" b="0.6" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
        <transformation id="tower_limits_transform">
            <translate x="0" y="0" z="-7"/>
            <rotate axis="y" angle="-90"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="support_beam">
            <cylinder base="0.1" top="0.1" height="1.0" slices="10" stacks="10" />
        </primitive>
        <primitive id="axis">
            <cylinder base="1.0" top="1.0" height="6.5" slices="10" stacks="10" />
        </primitive>
        <primitive id="gun">
            <cylinder base="0.3" top="0.3" height="2.0" slices="10" stacks="10" />
        </primitive>
        <primitive id="gun_support">
            <cylinder base="0.3" top="0.3" height="2.0" slices="4" stacks="10" />
        </primitive>
        <primitive id="wheel_torus_large">
            <torus inner="0.1" outer="1.0" slices="10" loops="25" />
        </primitive>
        <primitive id="cannon_back">
            <sphere radius="0.3" slices="10" stacks="10" />
        </primitive>
        <primitive id="wall">
            <rectangle x1="0" y1="0" x2="5" y2="7" />
        </primitive>
        <primitive id="watchtower_floor">
            <rectangle x1="0" y1="0" x2="7" y2="7" />
        </primitive>
        <primitive id="watchtower_limit">
            <rectangle x1="0" y1="0" x2="7" y2="1.5" />
        </primitive>
        <primitive id="watchtower_limit_inner">
            <rectangle x1="1" y1="0" x2="6.5" y2="0.5" />
        </primitive>
        <primitive id="watchtower_limit_inner_corner">
            <rectangle x1="0" y1="0" x2="1" y2="0.5" />
        </primitive>
        <primitive id="wall_section">
            <rectangle x1="1" y1="0" x2="6.5" y2="5" />
        </primitive>
        <primitive id="window">
            <rectangle x1="1" y1="4" x2="2" y2="6" />
        </primitive>
        <primitive id="door">
            <rectangle x1="-1" y1="0" x2="1" y2="3" />
        </primitive>
        <primitive id="axis_top">
            <sphere radius="1.0" slices="10" stacks="10"/>
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" length_s="1" length_t="2"/>
            <children>
                <componentref id="castle_walls"/>
                <componentref id="cannon"/>
                <componentref id="tower"/>
                <componentref id="tower2"/>
            </children>
        </component>

        <component id="tower2">
            <transformation>
                <translate x="25" y="0" z="0"/> 
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" length_s="1" length_t="2"/>
            <children>
                <componentref id="tower"/>
            </children>
        </component>

        <component id="castle_walls">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="stone_walls" length_s="1" length_t="2"/>
            <children>
                <componentref id="wall_component"/>
                <componentref id="castle_walls2"/>
            </children>
        </component>

        <component id="castle_walls2">
            <transformation>
                <translate x="5.5" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="wall_component" />
                <componentref id="castle_walls3"/>
            </children>
        </component>

        <component id="castle_walls3">
            <transformation>
                <translate x="5.5" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="wall_component" />
                <componentref id="castle_walls4" />
            </children>
        </component>
        
        <component id="castle_walls4">
            <transformation>
                <translate x="5.5" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="wall_component" />
            </children>
        </component>

        <component id="wall_component">
            <transformation>
                <translate x="1.5" y="0" z="-2" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" length_s="1" length_t="2"/>
            <children>
                <primitiveref id="wall_section"/>
                <componentref id="wall_section_component"/>
            </children>
        </component>

        <component id="wall_section_component">
            <transformation>
                <translate x="0" y="0" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="stone_walls" length_s="1" length_t="2"/>
            <children>
                <primitiveref id="wall_section"/>
                <componentref id="wall_top"/>
            </children>
        </component>

        <component id="wall_top">
            <transformation>
                <translate x="0" y="5" z="0" />
                <rotate axis="x" angle="-90"/>
                <scale x="1" y="2" z="1"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit" length_s="1" length_t="2"/>
            <children>
                <primitiveref id="watchtower_limit_inner"/>
                <componentref id="wall_axis"/>
            </children>
        </component>

        <component id="wall_axis">
            <transformation>
                <translate x="6.5" y="0.5" z="1.5"/>
                <rotate axis="y" angle="180"/>
                <scale x="1" y="0.5" z="1"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit" length_s="1" length_t="2"/>
            <children>
                <primitiveref id="axis"/>
                <primitiveref id="axis_top"/>
            </children>
        </component>

        <component id="tower">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="stone_walls" length_s="1" length_t="2"/>
            <children>
                <componentref id="window_comp"/>
                <componentref id="walls"/>
                <componentref id="watchtower"/>
                <componentref id="window_comp"/>
                <componentref id="door_comp"/>
            </children>
        </component>

        <component id="door_comp">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="tower_door" length_s="1" length_t="2"/>
            <children>
                <primitiveref id="door"/>
            </children>
        </component>

        <component id="window_comp">
