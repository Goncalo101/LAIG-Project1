            </materials>
            <texture id="inherit"/>
            <children>
                <!-- <primitiveref id="watchtower_limit"/> -->
                <componentref id="watchtower_limits"/>
            </children>
        </component> 

        <component id="walls">
            <transformation>
                <translate x="-2.5" y="0" z="0"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="wall"/>
                <componentref id="wall1"/>
            </children>
        </component>

        <component id="wall1">
            <transformation>
                <rotate axis="y" angle="90"/>
                <translate x="0" y="0" z="5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="wall"/>
                <componentref id="wall2"/>
            </children>
        </component>

        <component id="wall2">
            <transformation>
                <rotate axis="y" angle="90"/>
                <translate x="0" y="0" z="5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="wall"/>
                <componentref id="wall3"/>
