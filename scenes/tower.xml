        </component>

        <component id="watchtower_limits">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="watchtower_inner1"/>
                <componentref id="watchtower_outer"/>
            </children>
        </component>

        <component id="limit1">
            <transformation>
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="watchtower_limits"/>
                <!-- <componentref id="watchtower_upper"/> -->
                <componentref id="limit2"/>
            </children>
        </component>

        <component id="watchtower_outer">
            <transformation>
            </transformation>
            <materials>
